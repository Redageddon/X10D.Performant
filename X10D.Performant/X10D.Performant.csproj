<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Authors>Redageddon, Oliver Booth</Authors>
        <Configuration>Release</Configuration>
        <Copyright>MIT</Copyright>
        <Description>Performant Extension methods on crack.</Description>
        <ImplicitUsings>true</ImplicitUsings>
        <FileVersion>10.9.0</FileVersion>
        <Version>10.9.0</Version>
        <RepositoryUrl>https://github.com/Redageddon/X10D/</RepositoryUrl>
        <NeutralLanguage>en</NeutralLanguage>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <nullable>Enable</nullable>
        <LangVersion>Latest</LangVersion>
        <RootNamespace>X10D.Performant</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseFile>MIT-LICENSE.md</PackageLicenseFile>
        <PackageIcon>icon.png</PackageIcon>
        <PackageTags>dotnet extension-methods</PackageTags>
        <PackageVersion>10.9.0</PackageVersion>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="..\icon.png">
            <Pack>True</Pack>
            <PackagePath />
        </Content>
        <Content Include="..\MIT-LICENSE.md">
            <Pack>True</Pack>
            <PackagePath />
        </Content>
    </ItemGroup>

</Project>